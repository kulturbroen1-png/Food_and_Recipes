rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Recipes collection - publicly readable, write requires future authentication
    match /recipes/{recipeId} {
      // Anyone can read recipes (for global access)
      allow read: if true;
      
      // Only authenticated admin can write
      // TODO: Add authentication rules when auth is implemented
      allow write: if false;  // Temporarily disabled until auth is set up
    }
    
    // Recipe categories - publicly readable
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Default deny all for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
